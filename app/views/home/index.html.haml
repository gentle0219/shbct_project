.container
  - if !current_user.present?
    .signin_page
      .page-border
        %h5.title Sign in to
        %h4.title Construction Trakcer
        = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=> {class: 'form-inline sigin-page-form'}) do |f|
          .form-inputs
            = f.input :email, :required => false, :autofocus => true, label: false, placeholder: 'Username or email'
            = f.input :password, :required => false, label: false, placeholder: 'Password'
            /= f.input :remember_me, :as => :boolean, label: true if devise_mapping.rememberable?
            .control-group.boolean.optional.user_remember_me
              .controls
                %input{type:"hidden", value:"0", name:"user[remember_me]"}
                %label.checkbox{style:'font-size:11px;'}
                  %input{type:"checkbox", value:"1", name:"user[remember_me]", id:"user_remember_me", class:"boolean optional",style:'margin-top: 3px; margin-left: 20px;'}
                  Remember me on this computer  
            = f.button :submit, "Sign in", class:'btn btn-success'
      %p{style:'font-size: 12px;font-weight:600'} 
        Help:
        %span{style:'font-family: icon;font-size: 12px;font-weight:300'} I can't sign in or i forgot my username/pasword


        